---
import Layout from '../layouts/Layout.astro';
import Hero from '@components/Hero.astro';
import Card from '@components/Card.astro';
import Marquee from '@components/Marquee.astro';
import About from '@components/About.astro';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import ImageGTI from '@assets/screenshot-gti.png';
import ImageRAESAL from '@assets/screenshot-raesal.png'
import ImageTPX from '@assets/screenshot-tpx.png'

//Internalization
import { getI18N } from "../i18n/"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<Layout title={i18n.SEO_TITLE} description={i18n.SEO_DESCRIPTION}>
	<Header />
	<Hero />

	<main class="-mt-16 relative z-10 m-auto p-4 w-[800px] max-w-cal">
		<section id="proyectos" data-section="proyectos" class="scroll-m-20">
			<h2 class="flex items-center text-3xl mb-2 font-semibold gap-x-8">     
				{i18n.HEADER.PROJECTS}
			</h2> 
			<p class="mb-12">{i18n.DESCRIPCION_PROJECTS}</p>
			<ul role="list" class="grid gap-5 p-0 md:grid-cols-2 mb-16">
				<Card
					href="https://mauricioyair.github.io/To-do/"
					title={i18n.PROJECTS.PROJECT_TITLE_1}
					body={i18n.PROJECTS.PROJECT_DESCRIPTION_1},
					status={i18n.PROJECTS.PROJECT_STATUS_1},
					image="https://github.com/mauricioyair/To-do/blob/main/public/to-do-sc.png?raw=true",
					tech={["React", "CSS", "JavaScript"]}
				/>
				<Card
					href="https://noticiasdequeretaro.com.mx"
					title={i18n.PROJECTS.PROJECT_TITLE_2}
					body={i18n.PROJECTS.PROJECT_DESCRIPTION_2},
					status={i18n.PROJECTS.PROJECT_STATUS_2},
					image="",
					tech={["WordPress"]}
				/>
				<Card
					href="https://japi.af"
					title={i18n.PROJECTS.PROJECT_TITLE_3}
					body={i18n.PROJECTS.PROJECT_DESCRIPTION_3},	
					status={i18n.PROJECTS.PROJECT_STATUS_3},
					image="",
					tech={["Shopify", "Liquid", "HTML", "CSS", "JavaScript"]}
				/>
				<Card
					href="https://fran-co.mx"
					title={i18n.PROJECTS.PROJECT_TITLE_4}
					body={i18n.PROJECTS.PROJECT_DESCRIPTION_4},
					status={i18n.PROJECTS.PROJECT_STATUS_4},
					image="",	
					tech={["WordPress","Elementor", "HTML", "CSS", "Bootstrap"]}
				/>						
				<Card
					href="https://kerrylatamfoodservice.com"
					title={i18n.PROJECTS.PROJECT_TITLE_5}
					body={i18n.PROJECTS.PROJECT_DESCRIPTION_5},
					status={i18n.PROJECTS.PROJECT_STATUS_5},
					image="",	
					tech={["WordPress","Elementor","PHP", "HTML", "CSS", "JQuery", "Bootstrap"]}
				/>															
				<Card
					href="https://www.pastranagarcia.com"
					title={i18n.PROJECTS.PROJECT_TITLE_6}
					body={i18n.PROJECTS.PROJECT_DESCRIPTION_6},
					status={i18n.PROJECTS.PROJECT_STATUS_6},
					image="",	
					tech={["WordPress","Elementor", "HTML", "CSS", "Bootstrap"]}
				/>														
				<Card
					href="http://yosoyluzzz.com"
					title={i18n.PROJECTS.PROJECT_TITLE_7}
					body={i18n.PROJECTS.PROJECT_DESCRIPTION_7},
					status={i18n.PROJECTS.PROJECT_STATUS_7},
					image="",	
					tech={["WordPress","Elementor","PHP", "HTML", "CSS", "Bootstrap", "WooCommerce"]}
				/>						
				<Card
					href="http://gtitrailers.com"
					title={i18n.PROJECTS.PROJECT_TITLE_8}
					body={i18n.PROJECTS.PROJECT_DESCRIPTION_8},
					status={i18n.PROJECTS.PROJECT_STATUS_8},
					image={ImageGTI.src},	
					tech={["WordPress", "Elementor","PHP", "MySQL", "HTML", "CSS", "Bootstrap"]}
				/>
				<Card
					href="https://tpx.mx"
					title={i18n.PROJECTS.PROJECT_TITLE_9}
					body={i18n.PROJECTS.PROJECT_DESCRIPTION_9},
					status={i18n.PROJECTS.PROJECT_STATUS_9},
					image={ImageTPX.src},
					tech={["WordPress", "HTML", "CSS", "Tailwind CSS"]}
				/>
				<Card
					href="https://raesal.com.mx"
					title={i18n.PROJECTS.PROJECT_TITLE_10}
					body={i18n.PROJECTS.PROJECT_DESCRIPTION_10},
					status={i18n.PROJECTS.PROJECT_STATUS_10},
					image={ImageRAESAL.src},	
					tech={["Astro", "React", "Tailwind CSS"]}
				/>
			</ul>			
		</section>
		<Marquee />	
		<About />
		<Footer />
	</main>
</Layout>
