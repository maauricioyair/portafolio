---
//Internalization
import { getI18N } from "../i18n/"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section class="mb-7">
  <h2 class="mb-2 font-bold text-2xl">{i18n.labels.label_certificacion}</h2>
  <ul>
    {
      i18n.certificates.map(({ name, url }) => {       
        return (
          <li class="no-print truncate border-1 border-r border-t border-l border-b border-solid group-hover:bg-transparent group-hover:text-white bg-color-light-extra dark:bg-color-black-extra px-2 py-1 text-xs rounded">
            <a href={url} target="_blank" title={`Ver los certificados en ${name}`}>
              <span>
              {name} 
              <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><path fill="currentColor" d="M11 17H7q-2.075 0-3.537-1.463T2 12q0-2.075 1.463-3.537T7 7h4v2H7q-1.25 0-2.125.875T4 12q0 1.25.875 2.125T7 15h4zm-3-4v-2h8v2zm5 4v-2h4q1.25 0 2.125-.875T20 12q0-1.25-.875-2.125T17 9h-4V7h4q2.075 0 3.538 1.463T22 12q0 2.075-1.463 3.538T17 17z"/></svg>
              </span>
            </a>
          </li>
          <li class="print">            
            <span>
              {url}
            </span>
          </li>
        )
      })
    }
  </ul>
</section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;    
    font-size: 0.8rem;    
    padding: 0.2rem 0.6rem;
  }

  span {
    display: flex;
    align-items: center;
    column-gap: 4px;
  }  
</style>