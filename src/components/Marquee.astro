---
import ReactIcon from '@assets/2x/React.astro'
import TailwindIcon from '@assets/2x/Tailwind.astro'
import BootstrapIcon from '@assets/2x/Bootstrap.astro'
import WordpressIcon from '@assets/2x/Wordpress.astro'
import PhpIcon from '@assets/2x/Php.astro'
import FigmaIcon from '@assets/2x/Figma.astro'
import JavascriptIcon from '@assets/2x/Javascript.astro'
import HtmlIcon from '@assets/2x/HTML.astro'
import CssIcon from '@assets/2x/CSS.astro'
import MyslIcon from '@assets/2x/Mysql.astro'
import TypescriptIcon from '@assets/2x/Typescript.astro'
import MongoIcon from '@assets/2x/Mongo.astro'
import GitIcon from '@assets/2x/Git.astro'
import NodeIcon from '@assets/2x/Node.astro'

//Internalization
import { getI18N } from "../i18n/"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section id="herramientas" data-section="habilidades" class="scroll-m-20">
  <h2 class="flex items-center mb-12 text-3xl font-semibold gap-x-8">     
    {i18n.header.tools}
  </h2> 
  <article class="group flex items-start gap-4 Marquees mb-16">
    <div class="flex items-center gap-4 max-w-full overflow-hidden select-none">
      <ul class="flex items-start justify-around gap-4 shrink-0 min-w-full animate-marquee cursor-no-drop group-hover:[animation-play-state:paused]">
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <HtmlIcon />
        </li>
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <CssIcon />
        </li>
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <JavascriptIcon />
        </li>
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <TypescriptIcon />
        </li>
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <TailwindIcon />
        </li>
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <BootstrapIcon />
        </li>                      
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
            <ReactIcon />         
        </li>                     
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <FigmaIcon />
        </li>        
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <WordpressIcon />
        </li>
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <PhpIcon />               
        </li>        
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
            <MyslIcon />
        </li>        
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
            <GitIcon />
        </li>
      </ul>
  
      <!-- Repeated Marquee -->
      <ul class="flex items-start justify-around gap-4 shrink-0 min-w-full animate-marquee cursor-no-drop group-hover:[animation-play-state:paused]">
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <HtmlIcon />
        </li>
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <CssIcon />
        </li>
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <JavascriptIcon />
        </li>
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <TypescriptIcon />
        </li>
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <TailwindIcon />
        </li>
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <BootstrapIcon />
        </li>                      
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
            <ReactIcon />         
        </li>                     
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <FigmaIcon />
        </li>        
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <WordpressIcon />
        </li>
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
          <PhpIcon />               
        </li>        
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
            <MyslIcon />
        </li>
        <li class="h-full w-full rounded-2xl border bg-color-light-extra dark:bg-color-black-extra dark:border-border-dark px-8 py-6">   
            <GitIcon />
        </li>
      </ul>
    </div>
  </article>
</section>


<style>
  .Marquees{ 
    mask-image:linear-gradient(to right, rgba(0, 0, 0, 0) 0%, rgb(0, 0, 0) 10%, rgb(0, 0, 0) 90%, rgba(0, 0, 0, 0) 100%);
  }
</style>