---
interface Props {
	title: string;
	body: string;
	href: string;
	status: string;
	image: string | object;
	tech: Array<string>;
}

const { href, title, body, tech, status, image } = Astro.props;

//Internalization
import { getI18N } from "../i18n/"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<li aria-label="card item" class="list-none flex items-stretch p-0 border-1 border-r border-t border-l border-b border-solid bg-color-light-extra dark:border-border-dark dark:bg-color-black-extra dark:bg-none bg-[length:400%] bg-center rounded-2xl shadow-inset transition-all duration-700 ease-in-out hover:bg-[0] hover:bg-linear-gradient group">
	<a href={href} target="_blank" rel="noreferrer" class="relative bottom-0 overflow-hidden w-full no-underline leading-6 rounded-2xl hover:opacity-90">
		<div class="p-6 flex flex-col h-full">
			<header class="flex-1">
				<div class="flex justify-between">
					<h2 class="mb-2 text-xl font-semibold group-hover:text-white">
						{title}			
					</h2>
					<span class="text-[10px] leading-none group-hover:text-white">{status}</span>
				</div>
				<p class="mb-3 group-hover:text-white">
					{body}
				</p>
			</header>
			<footer>
				<div class="flex flex-wrap items-center gap-2">			
					{
						tech.map((item) => (
						<span class="truncate border-1 border-r border-t border-l border-b border-solid group-hover:bg-transparent group-hover:text-white bg-color-light-extra dark:bg-color-black-extra px-2 py-1 text-xs rounded">{item}</span>
						))
					}
				</div>
			</footer>
		</div>
		<img src={image} class="absolute -bottom-8 -right-10 -rotate-12 opacity-0 group-hover:opacity-100 transition-all duration-700 ease-in-out -z-10 rounded-xl w-11/12">
	</a>
</li>